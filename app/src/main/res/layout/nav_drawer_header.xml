<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerNavDrawerListViewHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:background="#ff0000"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/imgUserBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userBackground_layout_height"
        android:contentDescription="@string/empty"
        android:scaleType="fitXY"
        android:src="@drawable/nav_drawer_header" />

    <ImageView
        android:id="@+id/imgUserPhoto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:src="@android:drawable/sym_def_app_icon"/>


    <LinearLayout
        android:id="@+id/userData"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgUserPhoto"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tUserName"
            fontPath="fonts/Roboto-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            tools:text="Nome" />

        <TextView
            android:id="@+id/tUserEmail"
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            tools:text="Email@email.com" />
    </LinearLayout>
</RelativeLayout><!-- From: file:/C:/git/AndroidUtils/app/src/main/res/layout/nav_drawer_listview_header.xml -->