<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/trade_size_dp_3"
    android:layout_marginBottom="@dimen/trade_size_dp_3"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="@string/director"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/layout_diretor_nome_diretor_img"
            android:layout_width="@dimen/trade_size_dp_60"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@drawable/person" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_diretor_nome_diretor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:gravity="start"
            android:textStyle="italic|bold"
            tools:text="J.J. Abram" />

        <TextView
            android:id="@+id/layout_diretor_nome_escritor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:gravity="bottom|end"
            android:textStyle="italic|bold"
            tools:text="J.J. Abram" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/layout_diretor_nome_escritor_img"
            android:layout_width="@dimen/trade_size_dp_60"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@drawable/person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="@string/writer"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>